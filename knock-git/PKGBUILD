# Maintainer: Santiago Lo Coco <santilococo.01 at gmail dot com>

_pkgname="knock"
pkgname="${_pkgname}-git"
pkgver=1
pkgrel=1
pkgdesc="Convert ACSM files to PDFs/EPUBs with one command."
arch=('x86_64')
url="https://github.com/BentonEdmondson/knock"
license=('MIT')
depends=("bash")
makedepends=("nix" "git")
provides=('knock')
conflicts=('knock')
source=("git+${url}" 
        "multi_system.patch::${url}/pull/60.patch")
sha256sums=('SKIP' 
            'SKIP')

pkgver() {
    cd "${srcdir}/${_pkgname}"
    git describe --long --tags | sed 's/\([^-]*-g\)/r\1/;s/-/./g'
}

build() {
    cd "${srcdir}/${_pkgname}"
    git fetch origin pull/60/head:multi-system
    git checkout multi-system
    mkdir -p "${srcdir}/store"
    ls -la /nix
    ls -la "${srcdir}/store"
    export NIX_STORE_DIR="${srcdir}/store/nix/store"
    nix build --extra-experimental-features nix-command --extra-experimental-features flakes --store "${srcdir}/store" -o "${srcdir}/${_pkgname}/result" || var=$?
    if [ $var -eq 1 ]; then
        nix log "${srcdir}/store/nix/store/fc3mhn4cmsflxdmycddlgsrrhwvn725z-base64-x86_64-unknown-linux-musl.drv" --extra-experimental-features nix-command
        ls -la /nix
        ls -la "${srcdir}/store"
        return 1
    fi
}

package() {
    install -Dm755 "${srcdir}/store/$(readlink ${srcdir}/${_pkgname}/result | sed 's/^\///g')/bin/${_pkgname}" "${pkgdir}/usr/bin/${_pkgname}"
    install -Dm644 "${srcdir}/${_pkgname}/license" "${pkgdir}/usr/share/licenses/${_pkgname}/LICENSE"

    nix store gc --extra-experimental-features nix-command --store "${srcdir}/store"
    chmod -R +w "${srcdir}/store"
    rm -rf "${srcdir}/store"
}
